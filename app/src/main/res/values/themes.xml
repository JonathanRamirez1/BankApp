<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Banco" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:windowNoTitle">true</item>
    </style>

        <!-- Theme personalizado -->
    <style name="MyTheme" parent="Base.Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


        <!-- Custom AlertDialog -->
        <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
            <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
            <item name="DialogTitleText">@string/wait_moment</item>
            <item name="DialogSpotColor">@color/purple_700</item>
            <item name="DialogSpotCount">8</item>
        </style>


</resources>